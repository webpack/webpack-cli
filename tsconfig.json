{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.ts"
  ],
  "exclude": [
    "node_modules/**",
    "packages/*/node_modules/**"
  ]
}
