{
  "exclude": ["node_modules", "lib", "__tests__"],
  "files": [],
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "target": "ES2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": ".",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@webpack-cli/*": ["packages/*/src"]
    },
    "composite": true,
    "declaration": true
  },
  "references": [
    {
      "path": "packages/webpack-cli"
    },
    {
      "path": "packages/create-webpack-app"
    }
  ]
}
