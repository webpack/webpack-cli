{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules/**", "packages/*/node_modules/**", "lib/**/*.js", "./cli.js"]
}
