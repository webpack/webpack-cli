{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2017",
    "lib": ["es6", "es2017"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true
  },

  "exclude": [
    "node_modules/**",
    "packages/*/node_modules/**",
    "packages/**/__tests__/*.test.ts",
    "packages/**/__testfixtures__/*.ts",
    "test"
  ]
}
