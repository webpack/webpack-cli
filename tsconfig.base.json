{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"target": "es6",
		"lib": ["es6", "es2017"],
		"resolveJsonModule": true
	},
	"include": ["packages/**/*.ts"],
	"exclude": [
		"node_modules/**",
		"packages/*/node_modules/**",
		"packages/**/__tests__/*.test.ts",
		"packages/**/__testfixtures__/*.ts"
	]
}
