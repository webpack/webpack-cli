{
  "name": "webpack-cli",
  "version": "4.0.0-alpha-5",
  "description": "CLI for webpack & friends",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/webpack/webpack-cli.git"
  },
  "bin": {
    "webpack-cli": "cli.js"
  },
  "main": "cli.js",
  "engines": {
    "node": ">=8.0.0"
  },
  "keywords": [
    "webpack",
    "cli",
    "scaffolding",
    "module",
    "bundler",
    "web"
  ],
  "files": [
    "lib",
    "cli.js"
  ],
  "scripts": {
    "bootstrap": "npm run clean:all && npm install && lerna bootstrap",
    "build": "tsc",
    "changelog": "conventional-changelog --config ./build/changelog-generator/index.js --infile CHANGELOG.md --same-file",
    "clean:all": "rimraf node_modules packages/*/{node_modules}",
    "commit": "git-cz",
    "docs": "typedoc",
    "format": "eslint --fix . --ext .js,.ts",
    "lint": "eslint . --ext .js,.ts",
    "pretest": "npm run build && npm run lint",
    "reportCoverage": "nyc report --reporter=json && codecov -f coverage/coverage-final.json --disable=gcov",
    "smoketest": "./smoketests/smoketests.sh",
    "test": "nyc jest --maxWorkers=4 --reporters=default --reporters=jest-junit",
    "test:cli": "nyc jest test/ --maxWorkers=4 --reporters=default --reporters=jest-junit",
    "test:packages": "nyc jest packages/ --maxWorkers=4 --reporters=default --reporters=jest-junit",
    "test:ci": "nyc jest --maxWorkers=$(nproc) --reporters=default --reporters=jest-junit --colors",
    "travis:integration": "npm run build && npm run test && npm run reportCoverage",
    "travis:lint": "npm run build && npm run lint",
    "watch": "npm run build && tsc -w",
    "publish:monorepo": "npm run format && npm run test && lerna publish -m \"chore: monorepo version update\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --write",
      "git add"
    ],
    "{packages,lib}/**/!(__testfixtures__)/**.js": [
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "npm run format",
      "git add"
    ],
    "*.js": [
      "npm run format",
      "git add"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "cobertura"
    ],
    "transform": {
      "^.+\\.(ts)?$": "ts-jest"
    },
    "testRegex": [
      "/__tests__/.*\\.(test.js|test.ts)$",
      "/test/.*\\.(test.js|test.ts)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "nyc": {
    "include": [
      "./cli.js",
      "lib/**.js",
      "packages/**/*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.js"
    }
  },
  "dependencies": {
    "@webpack-cli/init": "^0.2.2",
    "ansi-escapes": "^4.2.1",
    "cli-table3": "^0.5.1",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "import-local": "^3.0.2",
    "interpret": "^2.0.0",
    "js-config-webpack-plugin": "^1.4.0",
    "terser-webpack-plugin": "^2.2.1",
    "update-notifier": "^3.0.1",
    "v8-compile-cache": "^2.1.0",
    "webpack": "^4.41.0",
    "webpack-log": "^3.0.1",
    "webpack-merge": "^4.2.2"
  },
  "peerDependencies": {
    "webpack": "4.x.x"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.1",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-lerna-scopes": "^8.2.0",
    "@types/jest": "^24.0.22",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "commitlint": "^8.2.0",
    "commitlint-config-cz": "^0.12.1",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "execa": "^3.2.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-cli": "^24.9.0",
    "jest-junit": "^9.0.0",
    "jest-serializer-ansi": "^1.0.3",
    "lerna": "^3.18.3",
    "lint-staged": "^9.4.2",
    "nyc": "^14.1.1",
    "prettier": "1.18.2",
    "ts-jest": "^24.1.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.7.2"
  }
}
